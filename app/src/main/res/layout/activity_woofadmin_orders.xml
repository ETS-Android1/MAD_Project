<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".woofadmin_orders">

    <!--Top menue bar begis-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorTopMenueBackgroud"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/app_logo_top"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo_top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/baloo"
            android:text="@string/app_top_txtShop"
            android:textColor="@color/colorTheme"
            android:textSize="50sp" />

    </LinearLayout>
    <!--Top menue bar ends-->

    <!--body start-->

    <!--Bottom navigation bar begins-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="70dp">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="21dp"
            android:fontFamily="cursive"
            android:text="@string/woofshop_txtplaceOrder"
            android:textSize="56sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.217" />

        <TextView
            android:id="@+id/cusname"
            android:layout_width="170dp"
            android:layout_height="54dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="52dp"
            android:fontFamily="sans-serif"
            android:text="@string/woofshop_orders_cusname"
            android:textColor="@color/colorBtnTheme"
            android:textSize="23sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <TextView
            android:id="@+id/textView55"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="17dp"
            android:fontFamily="sans-serif"
            android:text="@string/woofshop_cart_table_columnTXTproduct"
            android:textColor="@color/colorBtnTheme"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cusname" />

        <TextView
            android:id="@+id/woofshop_cart_quantity"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="42dp"
            android:fontFamily="sans-serif"
            android:text="@string/woofshop_txtQuantity"
            android:textColor="@color/colorBtnTheme"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView55" />

        <TextView
            android:id="@+id/woofshop_cart_disprice"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="35dp"
            android:fontFamily="sans-serif"
            android:text="@string/woofshop_bill_txtTOTAL"
            android:textColor="@color/colorBtnTheme"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/woofshop_cart_quantity" />

        <TextView
            android:id="@+id/cusname2"
            android:layout_width="186dp"
            android:layout_height="52dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif"
            android:text="A.B.C. Silva"
            android:textColor="@color/colorBtnTheme"
            android:textSize="22sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/cusname"
            app:layout_constraintStart_toEndOf="@+id/cusname" />

        <TextView
            android:id="@+id/woofshop_orders_productname"
            android:layout_width="210dp"
            android:layout_height="70dp"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="18dp"
            android:width="50dp"
            android:text="@string/woofshop_productname"
            android:textColor="@color/colorBtnblack"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/textView55"
            app:layout_constraintTop_toBottomOf="@+id/cusname2" />

        <TextView
            android:id="@+id/woofshop_orders_qty"
            android:layout_width="58dp"
            android:layout_height="66dp"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="24dp"
            android:width="50dp"
            android:text="@string/woofshop_billqty"
            android:textColor="@color/colorBtnblack"
            android:textSize="23sp"
            app:layout_constraintStart_toEndOf="@+id/woofshop_cart_quantity"
            app:layout_constraintTop_toBottomOf="@+id/woofshop_orders_productname" />

        <TextView
            android:id="@+id/woofshop_orders_price"
            android:layout_width="167dp"
            android:layout_height="41dp"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="28dp"
            android:width="50dp"
            android:text="@string/woofshop_price"
            android:textColor="@color/colorBtnblack"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/woofshop_cart_disprice"
            app:layout_constraintTop_toBottomOf="@+id/woofshop_orders_qty" />

        <!--body end-->

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="362dp"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="115dp"
            android:background="#27FFBAB5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Bottom navigation bar Ends-->

</RelativeLayout>