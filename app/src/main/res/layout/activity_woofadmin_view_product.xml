<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".woofshop_view_product">

    <!--Top menue bar begis-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorTopMenueBackgroud"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/app_logo_top"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo_top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/baloo"
            android:text="@string/app_top_txtadmin"
            android:textColor="@color/colorTheme"
            android:textSize="50sp" />

    </LinearLayout>
    <!--Top menue bar ends-->


    <!--body start-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">


        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="413dp"
            android:layout_height="439dp"
            android:addStatesFromChildren="false"
            android:divider="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.155">

            <TableRow

                android:id="@+id/firstRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <!-- first element of the row-->
                <TextView

                    android:id="@+id/column1"
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:background="#b0b0b0"
                    android:padding="18dip"
                    android:text="@string/woofshop_cart_table_columnTXTproduct"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView

                    android:id="@+id/column2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#DCDCDC"
                    android:padding="18dip"
                    android:text="@string/woofshop_cart_table_columnTXTqty"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView

                    android:id="@+id/column3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#DCDCDC"
                    android:padding="18dip"
                    android:text="@string/woofshop_cart_table_columnTXTprice"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView

                    android:id="@+id/column4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#DCDCDC"
                    android:padding="18dip"
                    android:text="@string/woofadminItemTbleTXT_view"
                    android:textColor="#000"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow

                android:id="@+id/secondRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <!-- first element of the row-->
                <TextView

                    android:id="@+id/r2column1"
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:background="#FBF1F1"
                    android:padding="18dip"
                    android:text="@string/woofshop_productname"
                    android:textColor="#606060"
                    android:textSize="12sp" />

                <TextView

                    android:id="@+id/r2column2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FBF1F1"
                    android:padding="18dip"
                    android:text="@string/woofshop_billqty"
                    android:textColor="#FF606060"
                    android:textSize="12sp" />

                <TextView

                    android:id="@+id/r2column3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FBF1F1"
                    android:padding="18dip"
                    android:text="@string/woofshop_price"
                    android:textColor="#FF606060"
                    android:textSize="12sp" />

                <TextView

                    android:id="@+id/btnviewitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTheme"
                    android:padding="18dip"
                    android:text="@string/woofadminItemTbleTXT_view"
                    android:textSize="12sp"
                    tools:text="@string/woofadminItemTbleTXT_view" />

            </TableRow>


        </TableLayout>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4CAF50"
            android:text="@string/woofadminBtnAddItem"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--body end-->



</RelativeLayout>